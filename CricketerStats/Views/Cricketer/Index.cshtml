@model IEnumerable<CricketerStats.Models.CricketerList>

@{
    ViewBag.Title = "Index";
}

<h4>Index</h4>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">


        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CricketerId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
             <a href="@Url.Action("Index", "OneDayStats", new { id = item.CricketerId})" >@item.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CricketerId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CricketerId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CricketerId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CricketerId })
            </td>
        </tr>
    }

</table>
